@{
    ViewData["Title"] = "Home Page";
}
@model LostInTheWoods.Models.Trail
@using LostInTheWoods
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div id="container">
    <div class="row">
        <div class="col-md-9">
            <h1>Add a new Trail</h1>
        </div>
        <div class="col-md-3">
            <a href="/"><h2>Go Home</h2></a>
        </div>
    </div>
    <div id="addTrailContainer">
        <form asp-controller="Home" asp-action="process" method="post" class="form">

            <span asp-validation-for="Name"></span><br>
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name">

            <span asp-validation-for="Description"></span><br>
            <label asp-for="Description"></label>
            <textarea class="form-control" asp-for="Description"></textarea>

            <span asp-validation-for="Length"></span><br>
            <label asp-for="Length"></label>
            <input class="form-control" asp-for="Length">

            <span asp-validation-for="Elevation_Change"></span><br>
            <label asp-for="Elevation_Change"></label>
            <input class="form-control" asp-for="Elevation_Change">

            <span asp-validation-for="Longitude"></span><br>
            <label asp-for="Longitude"></label>
            <input class="form-control" asp-for="Longitude">

            <span asp-validation-for="Latitude"></span><br>
            <label asp-for="Latitude"></label>
            <input class="form-control" asp-for="Latitude">

            <input class="form-control" type="submit" value="Create Record!" style="margin-top:20px;">
        </form>
    </div>
</div>