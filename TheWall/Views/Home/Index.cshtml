@{
    ViewData["Title"] = "Home Page";
}
@model TheWall.Models.User
@using TheWall
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div id="errors">
    <h1>@if(@TempData["errors"] != "" ){
        <span>@TempData["errors"]</span>
    }
    </h1>
</div>
<div id="formContainer">
    <h1>Register</h1>
    <form asp-controller="Home" asp-action="processForm" method="post" class="form">
        <h2>Enter your information</h2>
        <span asp-validation-for="firstName"></span><br>
        <label asp-for="firstName"></label>
        <input class="form-control" asp-for="firstName">
        <span asp-validation-for="lastName"></span><br>
        <label asp-for="lastName"></label>
        <input class="form-control" asp-for="lastName">
        <span asp-validation-for="email"></span><br>
        <label asp-for="email"></label>
        <input class="form-control" asp-for="email">
        <span asp-validation-for="password"></span><br>
        <label asp-for="password"></label>
        <input class="form-control" asp-for="password">
        <span asp-validation-for="passwordConfirmation"></span><br>
        <label asp-for="passwordConfirmation"></label>
        <input class="form-control" asp-for="passwordConfirmation">
        <input class="form-control" type="submit" style="margin-top:20px;">
    </form>
</div>
<div id="loginContainer">
    <h1>Login</h1>
    <form asp-controller="Home" asp-action="login" method="post" class="form">
        <label asp-for="email"></label>
        <input class="form-control" name="email">
        <label asp-for="password"></label>
        <input class="form-control" name="password" type="password">
        <input class="form-control" type="submit" style="margin-top:20px;">
    </form>
</div>