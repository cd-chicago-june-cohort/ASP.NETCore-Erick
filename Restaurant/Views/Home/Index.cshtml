@{
    ViewData["Title"] = "Home Page";
}
@model Restaurant.Models.Review
@using Restaurant
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div id="container">
    <h1>Write a new review: </h1>
    <form asp-controller="Home" asp-action="process" method="post" class="form">

        <span asp-validation-for="Author"></span><br>
        <label asp-for="Author"></label>
        <input class="form-control" asp-for="Author">

        <span asp-validation-for="Restaurant"></span><br>
        <label asp-for="Restaurant"></label>
        <input class="form-control" asp-for="Restaurant">

        <span asp-validation-for="Content"></span><br>
        <label asp-for="Content"></label>
        <textarea class="form-control" asp-for="Content" cols="30" rows="4"></textarea>

        <span asp-validation-for="Date"></span><br>
        <label asp-for="Date"></label>
        <input type="date" class="form-control" asp-for="Date">

        <span asp-validation-for="Stars"></span><br>
        <label asp-for="Stars"></label>
        <select class="form-control" asp-for="Stars">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>

        <input class="form-control" type="submit" value="Submit" style="margin-top:20px;">

    </form>
</div>